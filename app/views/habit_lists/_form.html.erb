<%= simple_form_for(habit_list) do |f| %>
  <div class="title">
    <%= f.input :title %>
  </div>

  <div class="description">
    <%= f.input :description %>
  </div>

  <%= f.input :category_id do %>
      <%= f.select :category_id, Category.all.map{|c| [c.name,c.id]}, :prompt => "Select" %>
  <% end %>

  <br>
  <div class="actions">
    <%= f.submit "Submit", class: "btn btn-primary"%>
  </div>
<% end %>
<hr>
