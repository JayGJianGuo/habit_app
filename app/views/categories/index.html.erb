<div class="col-md-12 col-xs-12">

  <h1 class="text center">
    Category Index
  </h1>
  <div class="group">
    <%= link_to "新建习惯类型", new_category_path, class: "btn btn-success btn3d" %>
  </div>

  <table class="table table-hover">
    <thead>
      <tr>
        <th>#</th>
        <th>Name</th>
        <th>Option</th>
      </tr>
    </thead>
    <tbody>
      <% @categories.each do |category| %>
        <tr>
          <td><%= category.id %></td>
          <td><%= category.name %></td>
          <td>
            <%= link_to("Edit", edit_category_path(category) , class: "btn btn3d btn-warning") %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

</div>
