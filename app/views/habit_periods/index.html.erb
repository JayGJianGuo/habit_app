<div class="row">
  <div class="col-md-10 col-xs-10 col-md-offset-1 col-xs-offset-1 fa">
    <%= link_to(" 时期", new_habit_list_habit_period_path(@habit_list), class: "btn btn-info pull-right fa-plus") %>
  </div>
</div>
<br>
<div class="col-md-12 col-xs-12">
  <table class="table text-center">
    <thead>
      <tr>
        <th class="col-md-4 col-xs-4 fa fa-clock-o text-center">  时期</th>
        <th class="col-md-2 col-xs-2 fa fa-calendar text-center">  天数</th>
        <th class="col-md-2 col-xs-2 fa fa-key text-center">  方法</th>
        <th class="col-md-2 col-xs-2 fa fa-calender text-center">操作</th>
      </tr>
    </thead>
    <tbody>
      <% @habit_periods.each do |habit_period| %>
        <tr>
          <td>
            <div class="period_types" style="width: 100%">
              <% c = habit_period.period_type.id %>
              <% if c == 1 %>
                <%= link_to habit_period.period_type.name, "", class: "btn btn-danger", style:"width: 100%" %>
              <% elsif c == 2 %>
                <%= link_to habit_period.period_type.name, "", class: "btn btn-warning", style:"width: 100%" %>
              <% elsif c == 3 %>
                <%= link_to habit_period.period_type.name, "", class: "btn btn-info", style:"width: 100%" %>
              <% else %>
                <%= link_to habit_period.period_type.name, "", class: "btn btn-success", style:"width: 100%" %>
              <% end %>
            </div>
          </td>
          <td><%= habit_period.period_time %></td>
          <td><%= habit_period.period_method %></td>
          <td>
            <%= link_to("编辑", edit_habit_list_habit_period_path(@habit_list, habit_period), class: "btn btn-primary") %>
            <%= link_to("删除", edit_habit_list_habit_period_path(@habit_list, habit_period), method: :delete, class: "btn btn-danger") %>
          </td>
        </tr>
      <% end %>

    </tbody>
  </table>
  <hr>

      <div class="col-md-12 col-xs-12 text-center">
        <tr>
          <td>合计天数</td>
          <td> --- </td>
          <td>
            <%= render_habit_period_total_day(@habit_period) %>
          </td>
        </tr>
      </div>
      <div class="col-md-12 col-xs-12 pull-right">
        <%= link_to "返回上级", @habit_list, class: "btn btn-some pull-right" %>
      </div>
</div>
