<div class="col-md-10 col-xs-10 col-md-offset-1 col-xs-offset-1">
  <%= simple_form_for(habit_list) do |f| %>
    <%= f.input :title, label: "习惯名称" %>
    <%= f.input :description, label: "你想要实现什么？" %>

    <%= f.input :category_id, label: "习惯类型" do %> <br>
      <%= f.select :category_id, Category.all.map{|c| [c.name,c.id]}, :prompt => "选择类型" %>
    <% end %>

    <br>
    <div class="actions">
      <%= f.submit "完成", data: { disable_with: "上传中……" }, class: "btn btn-primary"%>
    </div>
  <% end %>
</div>
