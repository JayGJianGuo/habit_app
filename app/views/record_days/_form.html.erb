<div class="col-md-8 col-xs-8 col-md-offset-2 col-xs-offset-2">
  <%= simple_form_for [@habit_list, @record_day] do |f| %>
    <div class="day-input col-xs-12">
      <%= f.input :day_num, label: "天数" %>
    </div>
    <div class="keyword col-xs-12">
      <%= f.input :keyword, label: "关键词" %>
    </div>
    <div class="record-content col-xs-12">
      <%= f.input :record_content, label: "今天，你完成了什么？" %>
    </div>
    <% @record_day.complete_at == nil %>
    <div class="col-xs-12">
      <%= f.submit "完成", data: { disable_with: "上传中……" }, class: "btn btn-primary"  %>
    </div>
  <% end %>
</div>
